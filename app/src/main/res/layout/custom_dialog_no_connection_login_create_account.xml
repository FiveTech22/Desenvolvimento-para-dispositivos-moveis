<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="274dp"
    android:layout_height="138dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_2"
        >

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/logo_sem_nome"
        android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/text_no_have_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/no_have_connection"
            android:textColor="@color/black_opacity_50"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="186dp"
            android:layout_height="26dp"
            android:layout_below="@id/text_no_have_connection"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="@color/black_opacity_50"
            android:textSize="11sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_below="@id/text_description"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_2" />

        <TextView
            android:id="@+id/text_Again"
            android:layout_width="110dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/try_Again"
            android:layout_alignTop="@id/view"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_semibold"
            android:textSize="12sp"
            android:textColor="@color/black_opacity_50"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>