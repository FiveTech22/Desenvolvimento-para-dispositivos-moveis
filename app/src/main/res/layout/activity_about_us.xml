<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.company.AboutUsActivity">


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:background="@color/purple_2"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:title=" "
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/voltar_telas"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/about_us"
                        android:layout_toEndOf="@id/image_back"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="14dp"
                />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_logo"
            android:layout_width="204.17dp"
            android:layout_height="115dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/logo_com__nome"
            android:scaleType="centerCrop"
    />

    <View
            android:id="@+id/view_version"
            android:layout_width="60dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/image_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_version_view"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:fontFamily="@font/roboto_medium"
            android:textSize="10sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/view_version"
            app:layout_constraintStart_toStartOf="@id/view_version"
            app:layout_constraintEnd_toEndOf="@id/view_version"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Personal_Finance_Manager"
            android:layout_width="167dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toBottomOf="@id/view_version"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="49dp"
            android:text="@string/Personal_Finance_Manager"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="17dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Five_Tech_Confinance_is_a_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_Personal_Finance_Manager"
            app:layout_constraintStart_toStartOf="@+id/text_Personal_Finance_Manager"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/Five_Tech_Confinance_is_a_tool"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="5.8dp"
            android:textSize="12sp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="18dp"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_about_five_tech"
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:text="@string/about_five_tech"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/text_Five_Tech_Confinance_is_a_tool"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@id/text_Personal_Finance_Manager"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_founded_in_2022"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="4.3dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text_about_five_tech"
                app:layout_constraintStart_toStartOf="@+id/text_about_five_tech"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/founded_in_2022"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="18dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Contact"
            android:layout_width="105dp"
            android:layout_height="18dp"
            android:text="@string/Contact"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/text_founded_in_2022"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/text_Personal_Finance_Manager"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_you_have_any_questions"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/text_Contact"
            app:layout_constraintStart_toStartOf="@+id/text_Contact"
            android:layout_marginTop="5.03dp"
            android:text="@string/you_have_any_questions"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="17dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Thank_you_for_choosing_our_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_you_have_any_questions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/Thank_you_for_choosing_our_app"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="48.97dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Five_Tech_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/Five_Tech_inc"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/black"
    />

</androidx.constraintlayout.widget.ConstraintLayout>