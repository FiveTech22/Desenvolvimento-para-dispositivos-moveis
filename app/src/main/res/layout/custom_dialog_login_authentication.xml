<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="317dp"
    android:layout_height="139dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_2"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ocupado"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_marginStart="92dp"
            />

        <TextView
            android:id="@+id/text_access_denied"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignTop="@id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/image"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/access_denied"
            android:textColor="@color/black_opacity_80"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_information_authentication"
            android:layout_width="256dp"
            android:layout_height="41dp"
            android:layout_below="@id/text_access_denied"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black_opacity_80"
            android:textSize="11sp"
            />

        <View
            android:id="@+id/topBorderView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text_information_authentication"
            android:layout_marginTop="12dp"
            android:background="#4E808080" />
        <View
            android:id="@+id/view_card"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/topBorderView"
            android:layout_centerHorizontal="true"
            />
        
        <TextView
            android:id="@+id/text_ok"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/ok"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:textColor="@color/purple_2"
            android:layout_alignTop="@id/view_card"/>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>