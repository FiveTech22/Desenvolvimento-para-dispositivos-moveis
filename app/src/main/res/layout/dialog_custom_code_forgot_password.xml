<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:background="@drawable/rounded_dialog_forgot"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_caution"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ocupado"
        android:layout_alignTop="@id/view"
        android:layout_alignStart="@id/view"
        android:layout_marginTop="5dp"
        android:layout_marginStart="115dp"
    />

    <TextView
        android:id="@+id/text_error"
        android:layout_width="95dp"
        android:layout_height="15dp"
        android:text="@string/input_error"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_medium"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="#333333"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/image_caution"
        android:layout_toEndOf="@id/image_caution"
        android:layout_alignBottom="@id/image_caution"/>
    <TextView
        android:id="@+id/text_information"
        android:layout_width="212dp"
        android:layout_height="15dp"
        android:layout_below="@id/text_error"
        android:textSize="11sp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter"
        android:layout_centerHorizontal="true"
    />

        <View
            android:id="@+id/topBorderView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/text_information"
            android:background="#4D808080"/>

        <TextView
            android:id="@+id/text_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBorderView"
            android:layout_centerHorizontal="true"
            android:text="@string/try_Again"
            android:textColor="@color/purple_2"
            android:fontFamily="@font/inter"
            android:textSize="12sp"
            android:layout_marginTop="7dp"
        />
</RelativeLayout>