<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CreateAccountActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_user_create_account"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/create_account_information"
        android:textColor="@color/black_opacity_80"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_user_create_account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_important_to_make_clear"
        android:layout_width="204dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:text="@string/create_account_for_start"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_create_account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_whats_your_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="26dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:text="@string/what_your_name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_email"
        app:layout_constraintTop_toBottomOf="@id/text_important_to_make_clear" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_email"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:hint="@string/type_your_name"
        android:layout_marginEnd="16dp"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_whats_your_name"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_whats_your_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:text="@string/whats_your_email"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/edit_email_create_account"
        app:layout_constraintStart_toStartOf="@id/text_whats_your_name"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_email_create_account"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:hint="@string/Type_your_email"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/edit_email"
        app:layout_constraintStart_toStartOf="@id/edit_email"
        app:layout_constraintTop_toBottomOf="@id/text_whats_your_email"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_whats_your_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:text="@string/whats_your_password"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/text_whats_your_email"
        app:layout_constraintTop_toBottomOf="@id/edit_email_create_account" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_Password_create_account"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:hint="@string/type_your_password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edit_text"
        android:elevation="4dp"
        android:paddingStart="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/edit_email_create_account"
        app:layout_constraintStart_toStartOf="@id/edit_email_create_account"
        app:layout_constraintTop_toBottomOf="@id/text_whats_your_password"
        tools:ignore="RtlSymmetry,VisualLintTextFieldSize" />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="18dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="@id/edit_Password_create_account"
        app:layout_constraintTop_toTopOf="@id/edit_Password_create_account"
        app:layout_constraintBottom_toBottomOf="@id/edit_Password_create_account"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_create_account"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:elevation="10dp"
        android:text="@string/create_account"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_Password_create_account"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/lato"
        android:text="@string/have_to_account"
        android:textColor="@color/black_opacity_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_create_account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_you_agree_terms"
        android:layout_width="226dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/inter_light"
        android:text="@string/you_agree_terms"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>