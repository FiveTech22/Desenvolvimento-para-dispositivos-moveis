<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cinza_claro_medio"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/blue_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_menu_initial"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingBottom="8dp"
        android:text="@string/initial"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/image_menu_initial"
        app:layout_constraintStart_toEndOf="@id/image_menu_initial"
        app:layout_constraintTop_toTopOf="@id/image_menu_initial" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_mes_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="@string/mes_atual"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_initial"
        app:layout_constraintTop_toBottomOf="@id/text_initial"
        app:layout_constraintTop_toTopOf="@id/text_initial" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_white_balance"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mes_atual"
        app:layout_constraintTop_toTopOf="@id/text_mes_atual" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:text="@string/account_balance"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_white_balance"
        app:layout_constraintTop_toBottomOf="@id/text_mes_atual"
        app:layout_constraintTop_toTopOf="@id/text_mes_atual" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/balance"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_account_balance"
        app:layout_constraintTop_toTopOf="@id/text_account_balance" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_white_overview"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_white_balance"
        app:layout_constraintTop_toTopOf="@id/image_white_balance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_month_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:text="@string/month_overview"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_white_overview"
        app:layout_constraintTop_toTopOf="@id/text_balance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:text="@string/total"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_month_overview"
        app:layout_constraintTop_toBottomOf="@id/image_white_balance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_revenues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:text="@string/revenue"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_month_overview"
        app:layout_constraintTop_toTopOf="@+id/text_month_overview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_revenues_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="30dp"
        android:text="@string/revenues_total"
        android:textColor="@color/green"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_revenues"
        app:layout_constraintTop_toBottomOf="@id/text_total" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/menu_expenses"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_revenues"
        app:layout_constraintTop_toTopOf="@id/text_revenues" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expenses_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="@string/expenses_total"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_expenses"
        app:layout_constraintTop_toBottomOf="@id/text_revenues_total" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_white_category_revenue"
        android:layout_width="385dp"
        android:layout_height="50dp"
        android:src="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="@id/image_white_overview"
        app:layout_constraintTop_toTopOf="@id/image_white_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category_revevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/image_white_category_revenue"
        app:layout_constraintTop_toTopOf="@id/text_expenses"
        android:layout_marginTop="114dp"
        android:layout_marginStart="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_revenue_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revenues"
        android:textSize="20sp"
        android:textColor="@color/green"
        app:layout_constraintStart_toStartOf="@id/text_category_revevenue"
        app:layout_constraintTop_toBottomOf="@id/text_expenses_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="87dp"
        android:layout_marginStart="200dp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_white_category_expense"
        android:layout_width="385dp"
        android:layout_height="50dp"
        android:src="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="@id/image_white_category_revenue"
        app:layout_constraintTop_toTopOf="@id/image_white_category_revenue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/image_white_category_expense"
        app:layout_constraintTop_toTopOf="@id/text_category_revevenue"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expense_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense"
        android:textSize="20sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@id/text_category_expense"
        app:layout_constraintTop_toBottomOf="@id/text_revenue_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginStart="200dp" />

</androidx.constraintlayout.widget.ConstraintLayout>