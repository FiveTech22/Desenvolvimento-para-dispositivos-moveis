<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CodeForgotPasswordActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_send_email_again"
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="@string/Send_email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_check_your_email"
        android:layout_width="202dp"
        android:layout_height="32dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/check_your_email"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_send_email_again" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_enter_the_sent_code"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="@string/enter_the_sent_code"
        android:textColor="@color/black_opacity_80"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_check_your_email" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_code_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:background="@drawable/border_edit_code_forgot_password"
        app:layout_constraintEnd_toStartOf="@id/edit_code_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter_the_sent_code" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_code_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/border_edit_code_forgot_password"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_code_1"
        app:layout_constraintEnd_toStartOf="@id/edit_code_3"
        app:layout_constraintStart_toEndOf="@id/edit_code_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_code_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/border_edit_code_forgot_password"
        app:layout_constraintBottom_toBottomOf="@id/edit_code_2"
        app:layout_constraintEnd_toStartOf="@id/edit_code_4"
        app:layout_constraintStart_toEndOf="@id/edit_code_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_code_4"
        android:layout_width="30dp"
        android:background="@drawable/border_edit_code_forgot_password"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_code_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_code_3" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:elevation="8dp"
        android:fontFamily="@font/lato"
        android:text="@string/Continue"
        android:textSize="14sp"
        android:backgroundTint="@color/green_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_code_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_resend_the_email_with_instructions"
        android:layout_width="236dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="@string/resend_the_email_with_instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_continue"
        android:layout_marginTop="110dp"/>

    <Button
        android:id="@+id/button_send_email_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        android:layout_marginBottom="40dp"
        android:text="@string/send_email_again"
        android:backgroundTint="@color/green_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>