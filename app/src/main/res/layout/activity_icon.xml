<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.user.IconActivity"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#EDEBEB"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
    >

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:background="@color/purple_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:title=" "
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                />

                <ImageView
                        android:id="@+id/arrow_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/voltar_telas"
                        android:importantForAccessibility="no"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha um Ã­cone"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/arrow_back"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="14dp"
                />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_classic"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/classics"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black_opacity_80"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="31dp"
                android:layout_marginStart="23dp"
        />

        <HorizontalScrollView
                android:id="@+id/srollview_classic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_classic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="21dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
            >

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_1"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/perfil_5"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_2"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_4"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_3"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_4"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_2"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_5"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_1"
                        android:elevation="7.11dp"
                />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_person"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/srollview_classic"
                app:layout_constraintStart_toStartOf="@id/text_classic"
                android:text="@string/person"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black_opacity_80"
                android:layout_marginTop="25dp"
        />

        <HorizontalScrollView
                android:id="@+id/srollview_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="21dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"

            >

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_6"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/perfil_h1"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_7"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_m1"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_8"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_m2"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_9"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_h2"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_10"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_h3"
                        android:elevation="7.11dp"
                />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_emojis"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/srollview_person"
                app:layout_constraintStart_toStartOf="@id/text_classic"
                android:text="@string/emojis"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black_opacity_80"
                android:layout_marginTop="25dp"
        />

        <HorizontalScrollView
                android:id="@+id/srollview_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_emojis"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="21dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"

            >

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_11"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/perfil_6"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_12"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_7"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_13"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_8"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_14"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_9"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_15"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_10"
                        android:elevation="7.11dp"
                />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_outher"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/srollview_animal"
                app:layout_constraintStart_toStartOf="@id/text_classic"
                android:text="@string/outher"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black_opacity_80"
                android:layout_marginTop="25dp"
        />

        <HorizontalScrollView
                android:id="@+id/srollview_outher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_outher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"

            >

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_16"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/perfil_11"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_17"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_12"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_18"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_13"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_19"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_14"
                        android:elevation="7.11dp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_20"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="7dp"
                        app:srcCompat="@drawable/perfil_15"
                        android:elevation="7.11dp"
                />

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
