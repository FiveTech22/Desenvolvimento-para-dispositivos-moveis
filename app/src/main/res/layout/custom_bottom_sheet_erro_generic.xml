<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_sheet"

>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_alert"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp"
            android:layout_marginStart="110dp"
            app:srcCompat="@drawable/erro"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_alert"
            app:layout_constraintTop_toTopOf="@id/img_alert"
            app:layout_constraintBottom_toBottomOf="@id/img_alert"
            android:text="Campos Incompletos"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:textColor="@color/black_opacity_80"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_alert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="9dp"
            android:text="Por favor certifique-se de fornecer todas as informações \n necessárias para uma receita válida."
            android:fontFamily="@font/roboto"
            android:textSize="11.27sp"
            android:textAlignment="center"
    />


        <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                app:layout_constraintTop_toBottomOf="@id/text_information"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/gray"
                android:layout_marginTop="8.47dp"
        />


        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="29.10dp"
                app:layout_constraintTop_toBottomOf="@id/view_2"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/try_Again"
                android:textAllCaps="false"
                android:textColor="@color/purple_2"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:background="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
