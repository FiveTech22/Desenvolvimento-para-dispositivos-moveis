<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.user.UserProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:background="@color/purple_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:title=" "
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                />

                <ImageView
                        android:id="@+id/arrow_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/seta_esquerda"
                        android:scaleType="centerCrop"
                        android:importantForAccessibility="no"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfil do usuário"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/arrow_back"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="14dp"
                />


                <ImageView
                        android:layout_width="16dp"
                        android:layout_height="11dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/seta_esquerda"
                        android:scaleType="centerCrop"
                        android:importantForAccessibility="no"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                />


            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_perfil"
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="38dp"
                android:layout_marginStart="9dp"
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/perfil_menu"
                android:scaleType="centerCrop"
        />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_perfil"
                app:layout_constraintBottom_toBottomOf="@id/image_perfil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/image_perfil"
                app:layout_constraintTop_toBottomOf="@id/image_perfil"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_delete"
                android:layout_width="282dp"
                android:layout_height="29.32dp"
                app:layout_constraintTop_toBottomOf="@id/edit_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="49.5dp"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_alteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/button_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50.18dp"
                android:text="ALTERAÇÃO DA SENHA"
                android:fontFamily="@font/inter_medium"
                android:textSize="15.52dp"
                android:textColor="@color/black_opacity_80"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_988"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_alteration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Deixe as senhas vazias , quando você não quiser mudá-lás."
                android:layout_marginTop="11dp"
        />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_988"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
        />


        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_password"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_new_password_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_new_password"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="282dp"
                android:layout_height="29.32dp"
                app:layout_constraintTop_toBottomOf="@id/edit_new_password_again"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="37dp"
                android:text="ALTERAR A SENHA"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>