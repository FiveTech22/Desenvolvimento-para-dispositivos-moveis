<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_fechar_x_revenue"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/fechar_x"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editar_receita"
        app:layout_constraintStart_toEndOf="@id/image_fechar_x_revenue"
        app:layout_constraintBottom_toBottomOf="@id/image_fechar_x_revenue"
        app:layout_constraintTop_toTopOf="@id/image_fechar_x_revenue"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>

<TextView
    android:id="@+id/valor_receita"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/valor_receita"
    android:layout_marginTop="16dp"
    android:textSize="32sp"
    android:textColor="@color/green"
    android:layout_marginStart="12dp"
    app:layout_constraintTop_toBottomOf="@id/view"
    app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/image_dash_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/valor_receita"
        app:tint="@color/black"/>

    <ImageView
        android:id="@+id/image_descricao"
        android:layout_width="65dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/salario_mensal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/image_dash_underline"
        tools:ignore="MissingConstraints" />

   <EditText
       android:id="@+id/descricao"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:hint="@string/descricao"
       android:background="@null"
       app:layout_constraintStart_toEndOf="@+id/image_descricao"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@id/image_descricao"
       app:layout_constraintBottom_toBottomOf="@id/image_descricao"
       android:padding="12dp"
       android:textSize="20sp"/>

    <ImageView
        android:id="@+id/image_dash_underline_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/descricao"
        app:tint="@color/text_warning"/>


    <ImageView
        android:id="@+id/image_data"
        android:layout_width="65dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/data"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/image_descricao"
        tools:ignore="MissingConstraints" />
<EditText
    android:id="@+id/data"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/data"
    android:background="@null"
    app:layout_constraintStart_toEndOf="@+id/image_data"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/image_data"
    app:layout_constraintBottom_toBottomOf="@id/image_data"
    android:padding="12dp"
    android:textSize="20sp"/>

<ImageView
    android:id="@+id/image_dash_underline_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/dash_underline"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/data"
    app:tint="@color/text_warning"/>

    <ImageView
        android:id="@+id/image_categoria"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/image_data"
        app:srcCompat="@drawable/categoria"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/categorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/categorias"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@+id/image_categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_categoria"
        app:layout_constraintBottom_toBottomOf="@id/image_categoria"
        android:padding="12dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/image_dash_underline_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/categorias"
        app:srcCompat="@drawable/dash_underline"
        app:tint="@color/text_warning"/>

    <ImageView
        android:id="@+id/image_salario"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/categorias"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/salario"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_investimento"
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/investimento"
        app:layout_constraintTop_toTopOf="@id/image_salario"
        app:layout_constraintStart_toEndOf="@id/image_salario"/>

    <ImageView
        android:id="@+id/servicos"
        android:layout_width="85dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/servi_os"
        app:layout_constraintTop_toTopOf="@id/image_investimento"
        app:layout_constraintStart_toEndOf="@id/image_investimento"/>
</androidx.constraintlayout.widget.ConstraintLayout>