<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_fechar_x"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/fechar_x"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_edit_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_revenue"
        app:layout_constraintStart_toEndOf="@id/image_fechar_x"
        app:layout_constraintBottom_toBottomOf="@id/image_fechar_x"
        app:layout_constraintTop_toTopOf="@id/image_fechar_x"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/text_revenue_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/revenue_value"
    android:layout_marginTop="16dp"
    android:textSize="32sp"
    android:textColor="@color/green"
    android:layout_marginStart="12dp"
    app:layout_constraintTop_toBottomOf="@id/view"
    app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_revenue_value"
        app:tint="@color/black"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_description"
        android:layout_width="65dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/salario_mensal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/image_dash_underline"
        app:layout_constraintLeft_toLeftOf="parent" />

   <androidx.appcompat.widget.AppCompatEditText
       android:id="@+id/edittext_description"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:hint="@string/description"
       android:background="@null"
       app:layout_constraintStart_toEndOf="@+id/image_description"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@id/image_description"
       app:layout_constraintBottom_toBottomOf="@id/image_description"
       android:padding="12dp"
       android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_description"
        app:tint="@color/text_warning"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_date"
        android:layout_width="65dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/data"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/image_description"
        app:layout_constraintLeft_toLeftOf="parent"/>

<androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/date"
    android:background="@null"
    app:layout_constraintStart_toEndOf="@+id/image_date"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/image_date"
    app:layout_constraintBottom_toBottomOf="@id/image_date"
    android:padding="12dp"
    android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:srcCompat="@drawable/dash_underline"
        app:tint="@color/text_warning"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_categories"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/image_date"
        app:srcCompat="@drawable/category"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/categories"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@+id/image_categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_categories"
        app:layout_constraintBottom_toBottomOf="@id/image_categories"
        android:padding="12dp"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_salary"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/categories"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        app:srcCompat="@drawable/salario"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="@id/image_salary"
        app:layout_constraintTop_toBottomOf="@id/image_salary"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_investment"
        android:layout_width="100dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/investimento"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@id/image_salary"
        app:layout_constraintTop_toTopOf="@id/image_salary"
        app:layout_constraintStart_toEndOf="@id/image_salary"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_investment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/investment"
        app:layout_constraintLeft_toLeftOf="@id/textview_salary"
        app:layout_constraintStart_toStartOf="@id/image_investment"
        app:layout_constraintTop_toBottomOf="@id/image_investment"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_services"
        android:layout_width="85dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/servi_os"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@id/image_investment"
        app:layout_constraintTop_toTopOf="@id/image_investment"
        app:layout_constraintStart_toEndOf="@id/image_investment"/>

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/textview_services"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/services"
    app:layout_constraintStart_toStartOf="@id/image_services"
    app:layout_constraintTop_toBottomOf="@id/image_services"
    app:layout_constraintLeft_toLeftOf="@id/textview_investment"
    android:layout_marginLeft="12dp"
    android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_others"
        android:layout_width="85dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/outros_1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textview_salary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"/>

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/textview_others"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/othres"
    app:layout_constraintStart_toStartOf="@id/image_others"
    app:layout_constraintTop_toBottomOf="@id/image_others"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="20dp"
    android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>