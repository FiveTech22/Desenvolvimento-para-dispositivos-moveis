<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.MenuActivity">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/blue_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profile_picture"
        android:layout_width="102dp"
        android:layout_height="93dp"
        android:src="@drawable/profile_menu"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_profile_picture" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_initiel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:srcCompat="@drawable/initial__menu"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_initial"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="@id/image_initiel"
        app:layout_constraintBottom_toBottomOf="@id/image_initiel"
        app:layout_constraintStart_toEndOf="@id/image_initiel"
        app:layout_constraintTop_toTopOf="@id/image_initiel" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plan"
        android:textColor="@color/text_second"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_dash_underline_initiel"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline_initiel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/image_initiel"
        app:tint="@color/text_second"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_objective"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_plan"
        app:srcCompat="@drawable/objective_menu" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_objective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_objective"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="@id/image_objective"
        app:layout_constraintBottom_toBottomOf="@id/image_objective"
        app:layout_constraintStart_toEndOf="@id/image_objective"
        app:layout_constraintTop_toTopOf="@id/image_objective" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_revenue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_objective"
        app:srcCompat="@drawable/revenue__menu"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_revenues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_revenues"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/image_revenue"
        app:layout_constraintStart_toEndOf="@id/image_revenue"
        app:layout_constraintTop_toTopOf="@id/image_revenue" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_expense"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_revenue"
        app:srcCompat="@drawable/expense_menu"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_expenses"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/image_expense"
        app:layout_constraintStart_toEndOf="@id/image_expense"
        app:layout_constraintTop_toTopOf="@id/image_expense" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image_expense"
        app:tint="@color/text_second"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_about"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_dash_underline_plan"
        app:srcCompat="@drawable/about"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/image_about"
        app:layout_constraintTop_toTopOf="@id/image_about"
        app:layout_constraintBottom_toBottomOf="@id/image_about"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_terms_of_use"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_about"
        app:srcCompat="@drawable/terms_of_use"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_terms_of_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_terms_of_use"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/image_terms_of_use"
        app:layout_constraintStart_toEndOf="@id/image_terms_of_use"
        app:layout_constraintTop_toTopOf="@id/image_terms_of_use" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dash_underline_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image_terms_of_use"
        app:tint="@color/text_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>