<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/purple_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:title=" "
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />

            <TextView
                android:layout_width="87dp"
                android:layout_height="38dp"
                android:text="@string/start"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:fontFamily="@font/darker_grotesque_semibold"
            />


            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/toolbar"
                android:src="@drawable/seta_esquerda"
                android:scaleType="centerCrop"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="110dp"
                android:importantForAccessibility="no"/>

            <TextView
                android:id="@+id/text_month"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_toEndOf="@id/arrow_back"
                android:layout_toStartOf="@id/arrow_next"
                android:layout_alignBottom="@id/toolbar"
                android:gravity="top|center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="26dp"
            />

            <ImageView
                android:id="@+id/arrow_next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/toolbar"
                android:src="@drawable/seta_direita"
                android:layout_marginEnd="110dp"
                android:importantForAccessibility="no"/>
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_balance"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp"
        android:translationZ="1000dp"
        android:layout_width="350dp"
        android:layout_height="100dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginStart="22dp"
                android:id="@+id/text_balance"
                android:layout_width="46dp"
                android:layout_height="24dp"
                android:text="@string/balance"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
            />

            <androidx.cardview.widget.CardView
                android:layout_below="@id/text_balance"
                android:id="@+id/card"
                android:layout_width="5dp"
                android:layout_marginTop="8dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/purple_3"
                android:layout_marginStart="17dp"
            />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:layout_toEndOf="@id/card"
                android:layout_alignTop="@id/card"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:textSize="24sp"
                android:layout_alignBottom="@id/card"
            />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/content_main"
    />





</androidx.constraintlayout.widget.ConstraintLayout>