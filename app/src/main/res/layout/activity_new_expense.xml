<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.expense.NewExpenseActivity">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_fechar_x_expense"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/close_x"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_new_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/nova_despesa"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/image_fechar_x_expense"
        app:layout_constraintTop_toBottomOf="@id/image_fechar_x_expense"
        app:layout_constraintTop_toTopOf="@id/image_fechar_x_expense" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_expense_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_value"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:background="@null"
        android:textColorHint="@color/red"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dash_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dash_underline"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/text_expense_value"
        app:tint="@color/black"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_description"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:src="@drawable/monthly_salary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/img_dash_underline"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/description"
        android:padding="12dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/image_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_description"
        app:layout_constraintBottom_toBottomOf="@id/image_description"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dash_underline_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/dash_underline"
        app:layout_constraintTop_toBottomOf="@id/text_description"
        app:tint="@color/text_warning"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_date"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:src="@drawable/date"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/image_description"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button_Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:background="@color/white"
        android:padding="12dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/image_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_date"
        app:layout_constraintBottom_toBottomOf="@id/image_date"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dash_underline_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/Button_Date"
        app:srcCompat="@drawable/dash_underline"
        app:tint="@color/text_warning"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_create"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red"
        android:text="@string/create"
        android:textColor="@color/white"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button_Date"/>


</androidx.constraintlayout.widget.ConstraintLayout>